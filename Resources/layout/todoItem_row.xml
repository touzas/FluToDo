<?xml version="1.0" encoding="utf-8" ?> 
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">



  <TextView 
        android:id="@+id/tbRowTitle"        
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:autoSizeMaxTextSize="16sp" />

    <ImageView
        android:id="@+id/imgComplete"        
        android:layout_width="@dimen/check_image"
        android:layout_height="@dimen/check_image"
        android:contentDescription="@string/complete"
        android:src="@drawable/checked"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/check_margin"
  />

</RelativeLayout>